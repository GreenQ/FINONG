<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_blur"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:alpha="0.3"
            android:id="@+id/play"
            android:onClick="StartGovnoActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_circle"
            />


        <ImageView
            android:alpha="0.3"
            android:id="@+id/about"
            android:layout_below="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/about_circle"/>

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="140dp"
            android:layout_height="140dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@drawable/fon_btn"
                ></RelativeLayout>

            <ImageView
                android:alpha="1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/btn_f2"/>

        </RelativeLayout>
    </RelativeLayout>






</RelativeLayout>