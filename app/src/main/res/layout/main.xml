                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/plus_img_w_h"
                    android:layout_height="@dimen/plus_img_w_h"
                    android:background="@drawable/plus"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

